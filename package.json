    "jest": "^23.4.2",
    "jest-dom": "^1.12.0",
    "json-server": "^0.12.2",
    "react-hot-loader": "^4.3.3",
    "react-testing-library": "^4.1.7",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.15.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.1.5",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  }
